@model IEnumerable<SistemaGestaoEscola.Web.Data.Entities.Course>

@if (!Model.Any())
{
    <div class="alert alert-info">No courses found.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Duração</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Name</td>
                    <td>@course.Type</td>
                    <td>@course.Duration h</td>
                    <td>
                        <a asp-controller="CourseDisciplines"
                           asp-action="ManageSubjects"
                           asp-route-courseId="@course.Id"
                           class="btn btn-sm btn-outline-primary">
                            Gerenciar Disciplinas
                        </a>
                        <a asp-controller="CourseDisciplines"
                           asp-action="Details"
                           asp-route-courseId="@course.Id"
                           class="btn btn-sm btn-outline-secondary">
                            Detalhes
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
