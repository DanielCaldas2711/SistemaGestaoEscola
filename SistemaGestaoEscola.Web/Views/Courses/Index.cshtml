@model SistemaGestaoEscola.Web.Models.CourseListViewModel

@{
    ViewData["Title"] = "Courses";
}

<h2 class="d-flex justify-content-between align-items-center">
    Courses
    <a asp-action="Create" class="btn btn-success">New Course</a>
</h2>

<form method="get" class="row mb-3">
    <div class="col-md-6">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name..." />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Area</th>
            <th>Shift</th>
            <th>Total Time</th>
            <th>Start</th>
            <th>End</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Area</td>
                <td>@course.Shift</td>
                <td>@course.TotalTime</td>
                <td>@course.StartingDate.ToString("dd/MM/yyyy")</td>
                <td>@course.EndingDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning btn-sm">Edit</a>
                    <button class="btn btn-danger btn-sm"
                            type="button"
                            onclick="confirmDelete('@course.Name', '@Url.Action("DeleteConfirmed", "Courses", new { id = course.Id })')">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-route-page="@i"
                       asp-route-searchTerm="@Model.SearchTerm">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}

@await Html.PartialAsync("_ConfirmPopup")

<form id="deleteForm" method="post" class="d-none">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function confirmDelete(courseName, deleteUrl) {
            window.showConfirmPopup({
                title: 'Delete Course',
                message: `Are you sure you want to delete ${courseName}?`,
                onConfirm: () => {
                    const form = document.getElementById('deleteForm');
                    form.action = deleteUrl;
                    form.submit();
                }
            });
        }
    </script>
}
