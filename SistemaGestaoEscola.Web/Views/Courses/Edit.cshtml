@model SistemaGestaoEscola.Web.Data.Entities.Course
@using SistemaGestaoEscola.Web.Data.Enums
@{
    ViewData["Title"] = "Editar Curso";
    var courseTypes = Enum.GetNames(typeof(CourseType));
}

<h2>Editar Curso</h2>

<form asp-action="Edit" method="post" class="mt-4">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Type" class="form-label">Type</label>
        <select asp-for="Type" class="form-select">
            <option value="">Selecione...</option>
            @foreach (var type in courseTypes)
            {
                <option value="@type">@type</option>
            }
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Nome</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Duration" class="form-label">Duração (horas)</label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-primary">Salvar Mudanças</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
