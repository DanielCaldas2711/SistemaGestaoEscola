@model PublicClassDetailsViewModel

@{
    ViewData["Title"] = "Detalhes da Turma";
}

<h3 class="mb-3">@Model.ClassName</h3>

<div class="mb-3">
    <strong>Curso:</strong> @Model.CourseName <br />
    <strong>Data de Início:</strong> @Model.StartingDate.ToShortDateString() <br />
    <strong>Data de Fim:</strong> @Model.EndingDate.ToShortDateString() <br />
    <strong>Duração:</strong> @Model.Duration horas <br />
    <strong>Turno:</strong> @Model.Shift
</div>

<h5>Disciplinas:</h5>

@if (!Model.Subjects.Any())
{
    <p class="text-muted">Nenhuma disciplina registrada para este curso.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Disciplina</th>
                <th>Carga Horária</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model.Subjects)
            {
                <tr>
                    <td>@subject.Name</td>
                    <td>@subject.Hours horas</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Classes" class="btn btn-secondary mt-3">Voltar para Turmas</a>
