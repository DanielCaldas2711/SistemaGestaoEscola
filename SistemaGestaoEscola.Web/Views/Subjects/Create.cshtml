@model SistemaGestaoEscola.Web.Data.Entities.Subject

@{
    ViewData["Title"] = "Create Subject";
}

<h2>Create Subject</h2>

<form asp-action="Create" method="post" class="mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Code" class="form-label">Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Hours" class="form-label">Hours</label>
        <select asp-for="Hours" class="form-select" id="Hours">
            <option value="">Select...</option>
            <option value="25">25</option>
            <option value="50">50</option>
        </select>
        <span asp-validation-for="Hours" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Absence" class="form-label">Absence</label>
        <input asp-for="Absence" class="form-control" id="Absence" readonly />
        <span asp-validation-for="Absence" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById("Hours").addEventListener("change", function () {
            const hours = this.value;
            const absenceInput = document.getElementById("Absence");

            if (hours === "25") {
                absenceInput.value = 3;
            } else if (hours === "50") {
                absenceInput.value = 6;
            } else {
                absenceInput.value = "";
            }
        });
    </script>
}
